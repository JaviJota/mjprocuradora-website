---
import "@fontsource-variable/onest"
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro"

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="canonical" href="https://www.procuradoracordoba.com/">

		<meta name="viewport" content="width=device-width" />

		<meta property="og:title" content="María José Carralero Medina - Procuradora en Córdoba y Andalucía">
		<meta property="og:description" content="Representación procesal, gestión de trámites judiciales y asesoramiento legal en Córdoba y Andalucía.">
		<!-- <meta property="og:image" content="https://www.procuradoracordoba.com/assets/IMG_0931-Cama4KKt.webp"> -->
		<meta property="og:url" content="https://www.procuradoracordoba.com/">
		<meta property="og:type" content="website">

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="María José Carralero Medina - Procuradora en Córdoba y Andalucía">
		<meta name="twitter:description" content="María José Carralero Medina, procuradora en Córdoba y Andalucía con amplia trayectoria. Representación procesal, gestión de trámites judiciales y asesoramiento legal.">
		<!-- <meta name="twitter:image" content="https://www.procuradoracordoba.com/assets/IMG_0931-Cama4KKt.webp"> -->

		<meta name="description" content="María José Carralero Medina, procuradora en Córdoba y Andalucía con amplia trayectoria. Representación procesal, gestión de trámites judiciales y asesoramiento legal.">
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen">
		<div class="fixed left-0 top-0 -z-10 h-full w-full">
			<div class="relative h-full w-full bg-[#2A3B47]">
			  <div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#bfa76a2e_1px,transparent_1px),linear-gradient(to_bottom,#a0a0a00a_1px,transparent_1px)] bg-[size:14px_24px]"></div> 
			  <div class="absolute left-0 right-0 top-[-10%] h-[1000px] w-[1000px] rounded-full bg-[radial-gradient(circle_400px_at_50%_300px,#ffffff1a,#2A3B47)]"></div>
			</div>
		</div>
		<Navbar />
		<main class="flex-grow">
			<slot />
		</main>
		<hr class="opacity-5 mt-auto">
		<Footer />
	</body>
</html>

<style is:global>
	:root {
    caret-color: transparent;
	}
	::-webkit-scrollbar {
		width: 10px;
	}

	::-webkit-scrollbar-track{
		background-color: #141314;
	}

	::-webkit-scrollbar-thumb{
		border-radius: 5px;
		background-color: #494950;
	}
	html,
	body {
		margin: 0;
		font-family: "Onest Variable", sans-serif;
	}

	.flex-grow {
		flex-grow: 1;
	}
</style>
